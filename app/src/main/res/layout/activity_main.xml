<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    
    
    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"

        >




        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Adoption Application Form"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/Blue"

            
            />
        

        

    </android.support.v7.widget.Toolbar>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"


        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >


                <!--<TextView-->

                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Page 1"-->
                <!---->


                <!--/>-->
                <!---->


                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"

                        >


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/page_gradient"
                            android:text="Page 1"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:textStyle="bold"


                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="8dp"
                            android:text="Welcome to Pets Rescue"
                            android:textColor="@color/Blue"
                            android:textSize="18sp"

                            />


                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:paddingTop="16dp"
                            android:src="@drawable/dog"


                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="Basic Info"
                            android:textStyle="bold"
                            android:textColor="@color/Blue"
                            android:textSize="18sp"


                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="Your Fullname "
                            android:textColor="@color/Blue"
                            android:textSize="16sp"


                            />


                        <EditText
                            android:id="@+id/name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="Email Address"
                            android:textColor="@color/Blue"
                            android:textSize="16sp"

                            />

                        <EditText

                            android:id="@+id/email_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"


                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="Phone Number"
                            android:textColor="@color/Blue"
                            android:textSize="16sp"


                            />


                        <EditText

                            android:id="@+id/phone_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="phone no"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:singleLine="true"


                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="Date of Birth"
                            android:textColor="@color/Blue"
                            android:textSize="16sp"


                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:paddingBottom="16dp"
                            >

                            <EditText
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/select_date"
                                />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Date"
                                android:id="@+id/pick_date"
                                android:paddingRight="8dp"

                                />




                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>




                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    >




                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"


                        >


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/page_gradient"
                            android:text="Page 2"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:textStyle="bold"


                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="About your Home"
                            android:textStyle="bold"
                            android:textColor="@color/Blue"
                            android:textSize="18sp"


                            />



                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="Do you have a Yard ? "
                            android:textColor="@color/Blue"
                            android:textSize="16sp"


                            />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="8dp"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            >

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:id="@+id/yes_button"
                            android:layout_weight="0.5"
                            android:onClick="onRadioButtonClicked"

                            />


                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"
                            android:id="@+id/no_button"
                            android:layout_weight="0.5"
                            android:onClick="onRadioButtonClicked"
                            />


                        </RadioGroup>


                        <EditText

                            android:id="@+id/yard_response"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=" if yes"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:visibility="invisible"



                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:text="Is it well Fenced? Also indicate the type "
                            android:textColor="@color/Blue"
                            android:textSize="16sp"


                            />

                        <EditText

                            android:id="@+id/fencetype_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Type of Fence"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"


                            />












                    </LinearLayout>







                </android.support.v7.widget.CardView>




           <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:paddingLeft="16dp"
                   android:paddingRight="16dp"
                   android:paddingTop="16sp"


                   >




                   <TextView

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/page_gradient"
                       android:text="Page 3"
                       android:textColor="#ffffff"
                       android:textSize="20sp"
                       android:textStyle="bold"



                       />



                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingTop="16dp"
                       android:text="Additional Information"
                       android:textStyle="bold"
                       android:textColor="@color/Blue"
                       android:textSize="18sp"


                       />



                   <TextView

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingTop="16dp"
                       android:text="Please provide your veterinarian's name "
                       android:textColor="@color/Blue"
                       android:textSize="16sp"


                       />



                   <EditText

                       android:id="@+id/vet_name"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Vet's name"
                       android:inputType="text"
                       android:maxLines="1"
                       android:singleLine="true"


                       />


                   <TextView

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingTop="16dp"
                       android:text="Please provide the name of a personal reference "
                       android:textColor="@color/Blue"
                       android:textSize="16sp"


                       />



                   <EditText

                       android:id="@+id/ref_name"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Ref's name"
                       android:inputType="text"
                       android:maxLines="1"
                       android:singleLine="true"


                       />




                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Submit"
                       android:textColor="#ffffff"
                       android:layout_gravity="end"
                       android:layout_margin="16dp"
                       android:background="@color/Blue"
                       android:id="@+id/submit_button"

                       />



               </LinearLayout>




           </android.support.v7.widget.CardView>



            </LinearLayout>


        </ScrollView>


    </LinearLayout>




